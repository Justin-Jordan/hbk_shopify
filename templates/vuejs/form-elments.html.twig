<!-- form-template-input -->
<template id="form-template-input-v2">
  <div :class="classe">
    <div class="form-group">
      <label :for="id_html" v-html="label" v-if="label"></label>
      <input :id="id_html" class="form-control" v-model="input.value" :placeholder="placeholder" required="required" v-if="required">
      <input :id="id_html" class="form-control" v-model="input.value" :placeholder="placeholder" @keyup="event_input" v-if="!required">
    </div>
  </div>
</template>

<!-- form-template-input radios -->
<template id="form-template-radio-v2">
  <div :class="classe">
    <div class="form-group" :class="classe">
      <div class="custom-control custom-checkbox">
        <input type="checkbox" class="custom-control-input" :id="id_html" v-model="input.value">
        <label class="custom-control-label" :for="id_html" v-html="label"></label>
      </div>
    </div>
  </div>
</template>

<!-- form-template-select -->
<template id="form-template-select-v2">
  <div :class="classe">
    <div class="form-group">
      <label :for="id_html" v-html="label"></label>
      <select :id="id_html" v-model="input.value" class="form-control" @change="event_input" :size="size_option">
        <option v-if="show_empty_option" value="">Choisir...</option>
        <option v-for="(option, index) in options" v-html="option" :value="index"></option>
      </select>
    </div>
  </div>
</template>

<!-- form-template-select -->
<template id="form-template-radios-v2">
  <div :class="classe">
    <div class="form-group">
      <div class="custom-control custom-radio" v-for="(option, index) in options">
        <input type="radio" :id="generate_radio(index)" v-model="input.value" :value="index" :name="name" @change="event_input" class="custom-control-input">
        <label class="custom-control-label" :for="generate_radio(index)" v-html="option"></label>
      </div>
    </div>
  </div>
</template>

<!-- form-template-input-textarea -->
<template id="form-template-textarea-html">
  <div>
    <label :for="id_html">${label}</label>
    <textarea :id="id_html" class="form-control" rows="3" v-model="name.processed"></textarea>
  </div>
</template>

<!-- form-template-input-textarea -->
<template id="form-template-textarea-string">
  <div>
    <label :for="id_html">${label}</label>
    <textarea :id="id_html" class="form-control" rows="3" v-model="name.value" @input="event_input"></textarea>
  </div>
</template>

<!-- form-template-input-datepicker -->
<template id="form-template-input-datepicker-2">
  <div>
    <label :for="id_html">${label}</label>
    <div class="input-group mb-2">
      <input :id="id_html" class="form-control" v-model="set_date_first" type="text" :data-id="set_date_first">
      <div class="input-group-prepend">
        <span class="input-group-text ui-datepicker-trigger" :id="id_html_trigger">
          <i class="far fa-calendar-alt"></i>
        </span>
      </div>
    </div>
  </div>
</template>